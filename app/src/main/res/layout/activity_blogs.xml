<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_background">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundLight"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/article_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/article_safety"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay aware of your surroundings, avoid isolated areas, and keep emergency contacts handy. Always trust your instincts and avoid risky situations, especially at night. Consider carrying a personal safety device for added protection."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/article_additional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regularly update your emergency contacts and practice safety drills with family or friends to stay prepared."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundLight"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/article_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/article_precautions"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use self-defense tools, inform someone of your plans, and avoid sharing personal details online. Always travel in groups when possible and use well-lit routes. Keep your phone charged and ready for emergencies."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/article_additional2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consider enrolling in a self-defense class to boost your confidence and skills."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundLight"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/article_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/article_laws"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Know your rights under laws like the Sexual Harassment of Women at Workplace Act, 2013. Familiarize yourself with local safety regulations and report any violations promptly. Seek legal advice if needed."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/article_additional3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay informed about updates to safety laws by following government announcements."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundLight"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/article_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Preparedness"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_content4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepare an emergency kit, learn basic first aid, and have a plan for unexpected situations. Include water, food, a flashlight, and a first-aid manual in your kit. Practice evacuation drills regularly."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/article_additional4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep a list of emergency numbers and a map of safe routes in your kit."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundLight"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/article_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Support"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_content5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join local safety groups, participate in workshops, and build a network for support. Share safety tips with neighbors and organize community watch programs. Collaborate with local authorities for better security."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/article_additional5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attend community safety events to strengthen your network and stay informed."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>